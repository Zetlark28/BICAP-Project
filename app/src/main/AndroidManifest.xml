<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unimib.bicap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_rectangular_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconanuova"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LaunchScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".service.ExoPlayerStream"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".HomePage"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginProfessore"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Survey"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CreazioneProgetto"
            android:parentActivityName=".HomePageSomministratore"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DettaglioQuestionario"
            android:parentActivityName=".CreazioneProgetto"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ListaProgetti"
            android:parentActivityName=".HomePage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EliminaProgetti"
            android:parentActivityName=".HomePageSomministratore"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomePageSomministratore"
            android:parentActivityName=".LoginProfessore"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuestionariDaFare"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuestionariDaTerminare"
            android:screenOrientation="portrait"/>
        <activity android:name=".PresentazioneProgetto"
            android:screenOrientation="portrait"/>
        <activity android:name=".CongratulazioniScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".service.PDFViewer"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreazioneSomministratore"
            android:screenOrientation="portrait"/>
        <activity android:name=".GestioneSomministratore"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <!--
        <provider
            android:name="android.support.v4.content.FileProvider"
