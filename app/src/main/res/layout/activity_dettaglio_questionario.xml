<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1E2E1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="Scegli una sola opzione"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <ProgressBar
                android:id="@+id/pbUpload"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/imCaricaVideo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/roboto"
                    android:scaleType="fitCenter"
                    android:text="Inserisci video"
                    app:icon="@drawable/video"
                    app:iconPadding="5dp"
                    app:iconSize="20dp"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/imInsertPdf"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/roboto"
                    android:scaleType="fitCenter"
                    android:text="Inserisci pdf"
                    app:icon="@drawable/caricapdf"
                    app:iconPadding="5dp"
                    app:iconSize="20dp"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/imInsertLink"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter"
                    android:text="INSERISCI LINK"
                    app:icon="@drawable/internet"
                    app:iconPadding="5dp"
                    app:iconSize="20dp"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:scaleType="fitCenter"
                    android:text="UPLOAD"
                    app:icon="@drawable/upload"
                    app:iconPadding="5dp"
                    app:iconSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/tvLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="@string/link_questionario"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/testo1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/link"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/roboto"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:singleLine="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/imNextStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/roboto"
                    android:scaleType="fitCenter"
                    android:text="PROSSIMO PASSO"
                    tools:ignore="ContentDescription"
                    app:icon="@drawable/prossimopassoicona"
                    app:iconPadding="5dp"
                    app:iconSize="20dp"/>

                <Button
                    android:id="@+id/imSaveProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/roboto"
                    android:scaleType="fitCenter"
                    android:text="SALVA PROGETTO"
                    tools:ignore="ContentDescription"
                    app:icon="@drawable/conferma"
                    app:iconPadding="5dp"
                    app:iconSize="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>